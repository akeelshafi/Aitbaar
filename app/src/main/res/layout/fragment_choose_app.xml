                    android:id="@+id/btnCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#3D7BFF"
                    android:text="I am a Customer"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="For Customers &amp; Buyers"
                    android:textColor="#9AA8BF"
                    android:textSize="12sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ✅ Vendor Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVendor"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardCustomer"
            app:layout_constraintTop_toBottomOf="@id/tvHeading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgVendor"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="vendor icon"
                    android:src="@drawable/store" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/continue_as"
                    android:textColor="#6E7E99"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vendor"
                    android:textColor="#2D3B55"
                    android:textSize="18sp"
                    android:textStyle="bold" />

