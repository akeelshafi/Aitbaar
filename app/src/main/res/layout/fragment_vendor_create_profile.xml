<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aitbaar_background"
    tools:context=".ui.vendor.profile.VendorCreateProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ✅ Top Logo -->
        <LinearLayout
            android:id="@+id/topLogoVendorProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:contentDescription="logo"
                android:src="@drawable/shield_aitbaar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_header_app_name"
                    android:textColor="#2B579A"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:text="@string/top_header_app_tagline"
                    android:textColor="#7A8BA6"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ✅ Title -->
        <TextView
            android:id="@+id/tvVendorCreateProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textColor="#233C73"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLogoVendorProfile" />

        <!-- ✅ Scroll Fields (Now starts from Photo Frame) -->
        <ScrollView
            android:id="@+id/scrollVendorFields"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/btnCreateVendorProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVendorCreateProfileTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="14dp">

                <!-- ✅ Profile Photo (Now inside ScrollView) -->
                <FrameLayout
                    android:id="@+id/vendorProfilePhotoContainer"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Profile Image"
                            android:background="@drawable/circle_white"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnVendorCamera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="#3D7BFF"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="Camera"
                            android:src="@drawable/camera"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <!-- ✅ Upload Text (Now inside ScrollView) -->
                <TextView
                    android:id="@+id/tvUploadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Upload Profile Photo / Shop Logo"
                    android:textColor="#7A8BA6"
                    android:textSize="14sp" />

                <!-- ✅ Fields Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="26dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="26dp">

                    <!-- ✅ Owner Name -->
                    <androidx.cardview.widget.CardView style="@style/AitbaarInputCardStyle">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/profile_user" />

                            <EditText
                                android:id="@+id/etOwnerName"
                                style="@style/AitbaarEditTextStyle"
                                android:hint="Owner Name"
                                android:inputType="textPersonName" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Phone Number -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/ic_phone" />

                            <EditText
                                android:id="@+id/etVendorPhone"
                                style="@style/AitbaarEditTextStyle"
                                android:enabled="false"
                                android:hint="+92 300 1234567"
                                android:textColor="#233C73" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Business Email -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/email" />

                            <EditText
                                android:id="@+id/etBusinessEmail"
                                style="@style/AitbaarEditTextStyle"
                                android:hint="Business Email (Optional)"
                                android:inputType="textEmailAddress" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Business Name -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/shop" />

                            <EditText
                                android:id="@+id/etBusinessName"
                                style="@style/AitbaarEditTextStyle"
                                android:hint="Business Name"
                                android:inputType="text" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Business Address -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/location" />

                            <EditText
                                android:id="@+id/etBusinessAddress"
                                style="@style/AitbaarEditTextStyle"
                                android:hint="Business Address"
                                android:inputType="textPostalAddress" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ GST Number -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/document" />

                            <EditText
                                android:id="@+id/etGstNumber"
                                style="@style/AitbaarEditTextStyle"
                                android:hint="GST Number (Optional)"
                                android:inputType="text" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Business Category Dropdown -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/category" />

                            <AutoCompleteTextView
                                android:id="@+id/actBusinessCategory"
                                style="@style/AitbaarEditTextStyle"
                                android:clickable="true"
                                android:focusable="false"
                                android:hint="Business Category"
                                android:inputType="none" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="Dropdown"
                                android:src="@drawable/ic_drop_down"
                                app:tint="#7A8BA6" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ✅ Business Type Dropdown -->
                    <androidx.cardview.widget.CardView
                        style="@style/AitbaarInputCardStyle"
                        android:layout_marginTop="12dp">

                        <LinearLayout style="@style/AitbaarInputRowStyle">

                            <ImageView
                                style="@style/AitbaarInputIconStyle"
                                android:src="@drawable/type" />

                            <AutoCompleteTextView
                                android:id="@+id/actBusinessType"
                                style="@style/AitbaarEditTextStyle"
                                android:clickable="true"
                                android:focusable="false"
                                android:hint="Business Type"
                                android:inputType="none" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="Dropdown"
                                android:src="@drawable/ic_drop_down"
                                app:tint="#7A8BA6" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


        <!-- ✅ Create Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCreateVendorProfile"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_gradient"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>