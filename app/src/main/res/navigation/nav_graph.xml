<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.akeel.aitbaar.ui.common.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_chooseApp"
            app:destination="@id/chooseApp"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chooseApp"
        android:name="com.akeel.aitbaar.ui.common.ChooseAppFragment"
        android:label="fragment_choose_app"
        tools:layout="@layout/fragment_choose_app">
        <action
            android:id="@+id/action_chooseApp_to_customerPhoneLoginFragment"
            app:destination="@id/customerPhoneLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/customerPhoneLoginFragment"
        android:name="com.akeel.aitbaar.ui.common.auth.PhoneLoginFragment"
        android:label="fragment_customer_phone_login"
        tools:layout="@layout/fragment_customer_phone_login">

        <argument
            android:name="userRole"
            app:argType="string" />

        <action
            android:id="@+id/action_customerPhoneLoginFragment_to_customerOtpVerifyFragment2"
            app:destination="@id/customerOtpVerifyFragment2" />
    </fragment>
    <fragment
        android:id="@+id/customerOtpVerifyFragment2"
        android:name="com.akeel.aitbaar.ui.common.auth.OtpVerifyFragment"
        android:label="fragment_customer_otp_verify"
        tools:layout="@layout/fragment_customer_otp_verify">
        <argument
            android:name="verificationId"
            app:argType="string" />

        <argument
            android:name="phoneNumber"
            app:argType="string" />

        <argument
            android:name="userRole"
            app:argType="string" />

        <action
            android:id="@+id/action_customerOtpVerifyFragment2_to_customerCreateProfileFragment"
            app:destination="@id/customerCreateProfileFragment" />
        <action
            android:id="@+id/action_customerOtpVerifyFragment2_to_vendorCreateProfileFragment"
            app:destination="@id/vendorCreateProfileFragment" />

        <action
            android:id="@+id/action_customerOtpVerifyFragment2_self"
            app:destination="@id/customerOtpVerifyFragment2" />
    </fragment>
    <fragment
        android:id="@+id/customerCreateProfileFragment"
        android:name="com.akeel.aitbaar.ui.customer.profile.CustomerCreateProfileFragment"
        android:label="fragment_customer_create_profile"
        tools:layout="@layout/fragment_customer_create_profile" />
    <fragment
        android:id="@+id/vendorCreateProfileFragment"
        android:name="com.akeel.aitbaar.ui.vendor.profile.VendorCreateProfileFragment"
        android:label="fragment_vendor_create_profile"
        tools:layout="@layout/fragment_vendor_create_profile" />
</navigation>