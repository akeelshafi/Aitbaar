<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- ✅ Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.akeel.aitbaar.ui.common.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_chooseApp"
            app:destination="@id/chooseApp"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ✅ Choose Role -->
    <fragment
        android:id="@+id/chooseApp"
        android:name="com.akeel.aitbaar.ui.common.ChooseAppFragment"
        android:label="fragment_choose_app"
        tools:layout="@layout/fragment_choose_app">

        <action
            android:id="@+id/action_chooseApp_to_customerPhoneLoginFragment"
            app:destination="@id/customerPhoneLoginFragment" />
    </fragment>

    <!-- ✅ Phone Login (Common for Customer & Vendor) -->
    <fragment
        android:id="@+id/customerPhoneLoginFragment"
        android:name="com.akeel.aitbaar.ui.common.auth.PhoneLoginFragment"
        android:label="fragment_customer_phone_login"
        tools:layout="@layout/fragment_customer_phone_login">

        <argument
            android:name="userRole"
            app:argType="string" />

        <action
            android:id="@+id/action_customerPhoneLoginFragment_to_customerOtpVerifyFragment2"
            app:destination="@id/customerOtpVerifyFragment2" />
    </fragment>

    <!-- ✅ OTP Verify (Common for Customer & Vendor) -->
    <fragment
        android:id="@+id/customerOtpVerifyFragment2"
        android:name="com.akeel.aitbaar.ui.common.auth.OtpVerifyFragment"
        android:label="fragment_customer_otp_verify"
        tools:layout="@layout/fragment_customer_otp_verify">

        <argument
            android:name="verificationId"
            app:argType="string" />

        <argument
            android:name="phoneNumber"
            app:argType="string" />

        <argument
            android:name="userRole"
            app:argType="string" />

        <!-- ✅ go to customer profile -->
        <action
            android:id="@+id/action_customerOtpVerifyFragment2_to_customerCreateProfileFragment"
            app:destination="@id/customerCreateProfileFragment" />

        <!-- ✅ go to vendor profile -->
        <action
            android:id="@+id/action_customerOtpVerifyFragment2_to_vendorCreateProfileFragment"
            app:destination="@id/vendorCreateProfileFragment" />

        <!-- ✅ self navigation for instant OTP screen update -->
        <action
            android:id="@+id/action_customerOtpVerifyFragment2_self"
            app:destination="@id/customerOtpVerifyFragment2" />
    </fragment>

    <!-- ✅ Customer Create Profile -->
    <fragment
        android:id="@+id/customerCreateProfileFragment"
        android:name="com.akeel.aitbaar.ui.customer.profile.CustomerCreateProfileFragment"
        android:label="fragment_customer_create_profile"
        tools:layout="@layout/fragment_customer_create_profile">

        <action
            android:id="@+id/action_customerCreateProfileFragment_to_customerDashboardFragment"
            app:destination="@id/customerDashboardFragment" />
    </fragment>

    <!-- ✅ Vendor Create Profile -->
    <fragment
        android:id="@+id/vendorCreateProfileFragment"
        android:name="com.akeel.aitbaar.ui.vendor.profile.VendorCreateProfileFragment"
        android:label="fragment_vendor_create_profile"
        tools:layout="@layout/fragment_vendor_create_profile">

        <action
            android:id="@+id/action_vendorCreateProfileFragment_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
    </fragment>

    <!-- ✅ Customer Dashboard -->
    <fragment
        android:id="@+id/customerDashboardFragment"
        android:name="com.akeel.aitbaar.ui.customer.dashboard.CustomerDashboardFragment"
        android:label="fragment_customer_dashboard"
        tools:layout="@layout/fragment_customer_dashboard" />

    <!-- ✅ Vendor Dashboard -->
    <fragment
        android:id="@+id/vendorDashboardFragment"
        android:name="com.akeel.aitbaar.ui.vendor.dashboard.VendorDashboardFragment"
        android:label="fragment_vendor_dashboard"
        tools:layout="@layout/fragment_vendor_dashboard" >
        <action
            android:id="@+id/action_vendorDashboardFragment_to_allTransactionsFragment"
            app:destination="@id/allTransactionsFragment" />
        <action
            android:id="@+id/action_vendorDashboardFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/allTransactionsFragment"
        android:name="com.akeel.aitbaar.ui.vendor.transaction.AllTransactionsFragment"
        android:label="fragment_all_transactions"
        tools:layout="@layout/fragment_all_transactions" />
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.akeel.aitbaar.ui.vendor.transaction.AddTransactionFragment"
        android:label="fragment_add_transaction"
        tools:layout="@layout/fragment_add_transaction" >
        <action
            android:id="@+id/action_addTransactionFragment_to_selectCustomerFragment"
            app:destination="@id/selectCustomerFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectCustomerFragment"
        android:name="com.akeel.aitbaar.ui.vendor.transaction.SelectCustomerFragment"
        android:label="fragment_select_customer"
        tools:layout="@layout/fragment_select_customer" />
    <fragment
        android:id="@+id/customersFragment"
        android:name="com.akeel.aitbaar.ui.vendor.customers.CustomersFragment"
        android:label="fragment_customers"
        tools:layout="@layout/fragment_customers" />
    <fragment
        android:id="@+id/confirmFragment"
        android:name="com.akeel.aitbaar.ui.vendor.confirm.ConfirmFragment"
        android:label="fragment_confirm"
        tools:layout="@layout/fragment_confirm" />
    <fragment
        android:id="@+id/vendorProfileFragment"
        android:name="com.akeel.aitbaar.ui.vendor.profile.VendorProfileFragment"
        android:label="fragment_vendor_profile"
        tools:layout="@layout/fragment_vendor_profile" />

</navigation>
